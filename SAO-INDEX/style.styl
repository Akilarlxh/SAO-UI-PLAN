//default color:
$recent-post-bgcolor = rgba(255,255,255,0.5)
$article-content-bgcolor = rgb(228, 244, 242)
$article-cover-bgcolor = rgba(255,255,255,0.5)
$article-cover-shadow = rgba(222,222,222,0.5)
$recent-post-triangle = #37e2dd
body
  background #000000

.recent-posts
  padding 0 15px 0 15px

  .recent-post-item
    margin-bottom 15px
    width 100%
    background $recent-post-bgcolor
    overflow hidden
    border-radius 15px
    .recent-post-info
      .article-title-link
        display -webkit-box
        -webkit-box-orient vertical
        -webkit-line-clamp 2
        overflow hidden
    .article-content
      background $article-content-bgcolor
      position relative
      display flex
      .article-content-text
        display -webkit-box
        -webkit-box-orient vertical
        -webkit-line-clamp 4
        overflow hidden

    .recent-post-cover
      position relative
      background $article-cover-bgcolor
      img
        &.article-cover
          height 100%
          width 100%
          object-fit cover

    .recent-post-info
      align-items center
      flex-direction column
      position relative
      background $recent-post-bgcolor
      display flex
      color #000000
      .article-title
        height 50%
        font-size 24px
      .recent-post-meta
        height 50%
      .article-meta-wrap
        font-size 12px

@media screen and (min-width:600px)
  .recent-post-item
    &:hover
      .recent-post-content
        transition all 0.5s
        &.right
          transform translateX(23.07%)
        &.left
          transform translateX(-23.07%)
      .recent-post-content
        &.right
          &::before
            left: 50px;
        &.left
          &::before
            right: 50px;

    .recent-post-content
      background $recent-post-bgcolor
      position relative
      height 200px
      width 130%
      z-index 0
      display flex
      overflow hidden
      border 0px solid
      &::before
        content: "";
        width: 0;
        height: 0;
        background: transparent;
        position: absolute;
        z-index: 3;
        top: calc(50% - 10px);
        border-top: 10px solid transparent;
        border-bottom: 10px solid transparent;
      &.right
        flex-direction: row;
        left -30%
        &::before
          left: calc(23.7% + 50px);
          border-left: 6px solid $recent-post-triangle;
        .recent-post-info
          &::before
            background linear-gradient(to right, $recent-post-bgcolor, transparent)
            left 100%
        .article-content
          &::before
            right -59px
            border-left 60px solid $article-content-bgcolor
          &::after
            right -60px
            border-left 60px solid #000000
        .article-content
          padding 20px 20px 20px 60px
        .article-title
          padding 20px 30px 15px 70px
        .recent-post-meta
          padding 20px 20px 20px 70px
      &.left
        flex-direction: row-reverse;
        right 0
        &::before
          right: calc(23.7% + 50px);
          border-right: 6px solid $recent-post-triangle;
        .recent-post-info
          &::before
            background linear-gradient(to left, $recent-post-bgcolor, transparent)
            right 100%
        .article-content
          &::before
            left -59px
            border-right 60px solid $article-content-bgcolor
          &::after
            left -60px
            border-right 60px solid #000000
        .article-content
          padding 20px 60px 20px 20px
        .article-title
          padding 20px 70px 15px 30px
        .recent-post-meta
          padding 20px 70px 20px 20px

    .article-content
      width 30%
      height 200px
      left 0
      align-items center
      &::before
        content ""
        width 0
        height 0
        background transparent
        position absolute
        z-index 2
        top 0
        border-top 100px solid transparent
        border-bottom 100px solid transparent
      &::after
        content ""
        width 0
        height 0
        background transparent
        position absolute
        z-index 1
        top 0
        border-top 100px solid transparent
        border-bottom 100px solid transparent
    .recent-post-info
      width 60%
      height 200px
      &::before
        content ""
        width 200px
        height 200px
        position absolute
        z-index 1
        top 0
    .recent-post-cover
      width 40%
      height 200px
@media screen and (max-width:600px)
  .recent-post-item
    height 500px
    .recent-post-content
      display flex
      flex-direction: column
      height 500px
      .article-content
        order: 1;
        height: 250px;
        position: absolute;
        width: calc(100% - 30px);
        z-index: 3;
        background: rgba($article-content-bgcolor,0.5);
      .recent-post-cover
        order: 2
        height 250px
        filter blur(2px)
      .recent-post-info
        order: 3
        height 250px
