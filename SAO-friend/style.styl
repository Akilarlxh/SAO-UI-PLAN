body
  background: #000
.SAO-friend-item
  background: #fff
  margin: 20px 25px 20px 25px;
  height: 100px;
  width: 250px;
  .SAO-friend-card
    background: red

    .SAO-friend-card-head
      background: green
      height: 100px;
      width: 50px;
      clip-path: polygon(0 10px,10px 0,40px 0,50px 10px,50px 20px,40px 30px,40px 70px,50px 80px,50px 90px,40px 100px,10px 100px,0 90px);
    .SAO-friend-card-avatar
      background: blue
      height: 56px;
      width: 56px;
      position: absolute;
      top: 22px;
      left: 68px;
      clip-path: polygon(0 8px,8px 0,48px 0,56px 8px,56px 48px,48px 56px,8px 56px,0px 48px);

    .SAO-friend-card-right
      background: yellow
    .SAO-friend-card-left
      background: purple
  .SAO-friend-descr
    display: none
