body
  background #000000

.recent-posts
  padding 0 15px 0 15px

.recent-post-item
  margin-bottom 15px

.recent-post-info
  .article-title-link
    display -webkit-box
    -webkit-box-orient vertical
    -webkit-line-clamp 2
    overflow hidden

.article-content-text
  display -webkit-box
  -webkit-box-orient vertical
  -webkit-line-clamp 4
  overflow hidden

@media screen and (min-width:600px)
  .recent-post-item
    width 100%
    background red
    overflow hidden
    border-radius 15px
    &:hover
      .recent-post-content
        transition all 0.5s
        &.right
          transform translateX(23.07%)
        &.left
          transform translateX(-23.07%)
      .recent-post-content
        &.right
          &::before
            left: 50px;
        &.left
          &::before
            right: 50px;
  .recent-post-content
    background rgb(111, 150, 146)
    position relative
    height 200px
    width 130%
    z-index 0
    display flex
    overflow hidden
    border 0px solid
    &::before
      content: "";
      width: 0;
      height: 0;
      background: transparent;
      position: absolute;
      z-index: 3;
      top: calc(50% - 10px);
      border-top: 10px solid transparent;
      border-bottom: 10px solid transparent;
    &.right
      flex-direction: row;
      left -30%
      &::before
        left: calc(23.7% + 50px);
        border-left: 6px solid #37e2dd;
      .recent-post-info
        &::before
          background linear-gradient(to right, #ffffff, transparent)
          left 100%
      .article-content
        &::before
          right -59px
          border-left 60px solid #e5eff0
        &::after
          right -60px
          border-left 60px solid #000000
      .article-content
        padding 20px 20px 20px 60px
      .article-title
        padding 20px 30px 15px 70px
      .recent-post-meta
        padding 20px 20px 20px 70px
    &.left
      flex-direction: row-reverse;
      right 0
      &::before
        right: calc(23.7% + 50px);
        border-right: 6px solid #37e2dd;
      .recent-post-info
        &::before
          background linear-gradient(to left, #ffffff, transparent)
          right 100%
      .article-content
        &::before
          left -59px
          border-right 60px solid #e5eff0
        &::after
          left -60px
          border-right 60px solid #000000
      .article-content
        padding 20px 60px 20px 20px
      .article-title
        padding 20px 70px 15px 30px
      .recent-post-meta
        padding 20px 70px 20px 20px
  .article-content
    width 30%
    height 200px
    background #e5eff0
    position relative
    left 0
    display flex
    align-items center
    &::before
      content ""
      width 0
      height 0
      background transparent
      position absolute
      z-index 2
      top 0
      border-top 100px solid transparent
      border-bottom 100px solid transparent
    &::after
      content ""
      width 0
      height 0
      background transparent
      position absolute
      z-index 1
      top 0
      border-top 100px solid transparent
      border-bottom 100px solid transparent
  .recent-post-info
    width 60%
    height 200px
    position relative
    background #ffffff
    display flex
    align-items center
    color #ffffff
    flex-direction column
    color #000000
    &::before
      content ""
      width 200px
      height 200px
      position absolute
      z-index 1
      top 0
    .article-title
      height 50%
      font-size 24px
    .recent-post-meta
      height 50%
    .article-meta-wrap
      font-size 12px
  .recent-post-cover
    width 40%
    height 200px
    position relative
    background #0000ff
    img
      &.article-cover
        height 100%
        width 100%
        object-fit cover

@media screen and (max-width:600px)
  .recent-post-item
    width 100%
    background red
    height 500px
    border-radius 15px
    overflow hidden
    &::before
      content ""
      width 0
      height 0
      background transparent
      position absolute
      z-index 2
      top 30px
      right calc(50% - 20px)
      border-top 10px solid #73b8f4
      border-left 20px solid transparent
      border-right 20px solid transparent
  .recent-post-content
    background rgb(111, 150, 146)
    height 500px
    width 100%
    z-index 0
    display flex
    flex-direction column-reverse
  .article-content
    width 100%
    height 250px
    background rgba(255, 255, 255, 0.5)
    display flex
    align-items center
    position absolute
    top 0
    z-index 1
    left 0
    padding 40px 35px 0px 35px
  .recent-post-info
    width 100%
    height 250px
    background #ffffff
    display flex
    align-items center
    flex-direction column
    .article-title
      width 100%
      height 70%
      background #ffffff
      text-align center
      padding 15px 25px 30px 25px
      font-size 30px
    .recent-post-meta
      width 100%
      height 30%
      background #ffffff
      text-align center
      padding 0px 20px 15px 20px
      font-size 12px
  .recent-post-cover
    width 100%
    height 250px
    background #ffffff
    img
      &.article-cover
        height 95%
        width 100%
        object-fit cover
        filter blur(4px)
